<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.liying.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servlet/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.liying.servlet.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/servlet/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.liying.servlet.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/servlet/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryUserShow</servlet-name>
        <servlet-class>com.liying.servlet.show.QueryUserShow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryUserShow</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryShowByPage1</servlet-name>
        <servlet-class>com.liying.servlet.show.QueryShowByPage1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryShowByPage1</servlet-name>
        <url-pattern>/show1</url-pattern>
    </servlet-mapping>
     <!--字符编码过滤器-->
    <filter>
        <filter-name>CharacterFilter</filter-name>
        <filter-class>com.liying.filter.CharacterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>sysFilter</filter-name>
        <filter-class>com.liying.filter.sysFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sysFilter</filter-name>
        <url-pattern>/pages/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>com.liying.servlet.show.FileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/servlet/file</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IoFile</servlet-name>
        <servlet-class>com.liying.servlet.show.IoFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IoFile</servlet-name>
        <url-pattern>/servlet/iofile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePet</servlet-name>
        <servlet-class>com.liying.servlet.show.ChangePet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePet</servlet-name>
        <url-pattern>/servlet/change</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QueryMyShow</servlet-name>
        <servlet-class>com.liying.servlet.show.QueryMyShow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryMyShow</servlet-name>
        <url-pattern>/servlet/myshow</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PetHouseEnter</servlet-name>
        <servlet-class> com.liying.servlet.show.PetHouseEnter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PetHouseEnter</servlet-name>
        <url-pattern>/servlet/pethouse</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AnimalRecognition</servlet-name>
        <servlet-class>com.liying.servlet.show.AnimalRecognition</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnimalRecognition</servlet-name>
        <url-pattern>/servlet/animal</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login1.jsp</welcome-file>
    </welcome-file-list>


</web-app>